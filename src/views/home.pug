<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="/styles/styles.css")
        link(rel="shortcut icon", href="data:image/x-icon" type="image/x-icon")
        title Guess Mine
    body
        .loginBox
            form#jsLogin
                h1 LOGIN
                input(placeholder="Decide your nickname", type="text")
        .bigFrame
            .firstFrame
            .secondFrame
                .timeBox#timeBox
                    img(src="../photos/pngwave.png", width="50px", height="50px")
                    #jsTimer
                #jsNotifs
            .gameContainer#jsGame
                .user
                    .player__board#jsPBoard
                .main
                    canvas.canvas#jsCanvas
                    .controls#jsControls
                        .buttonFrame
                            button.currentPos.penButton#jsMode 
                            button.fillButton#jsFill
                            button.eraserButton#jsClear
                        .colors
                            .color.jsColor(style="background-color:rgb(0, 0, 0)")
                            .color.jsColor(style="background-color:rgb(255,255,255)")
                            .color.jsColor(style="background-color:rgb(255,59,48)")
                            .color.jsColor(style="background-color:rgb(255,149,0)")
                            .color.jsColor(style="background-color:rgb(255,204,0)")
                            .color.jsColor(style="background-color:rgb(76,217,100)")
                            .color.jsColor(style="background-color:rgb(90,200,250)")
                            .color.jsColor(style="background-color:rgb(0,122,255)")
                            .color.jsColor.lastColor(style="background-color:rgb(88,86,214)")
                .chat
                    ul.chat__messages#jsMessages
                    form.chat__form#jsSendMsg
                        input(placeholder="Write a message", type="text")
        script.
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")